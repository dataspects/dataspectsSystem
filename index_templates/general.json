PUT _template/general
{
  "index_patterns": [
    "mediawiki*",
    "code*",
    "document*",
    "dataspects*"
  ],
  "settings": {
    "index": {
      "analysis": {
        "filter": {
          "my_shingle2_filter": {
            "max_shingle_size": "2",
            "min_shingle_size": "2",
            "token_separator": " ",
            "output_unigrams": "false",
            "filler_token": "_",
            "output_unigrams_if_no_shingles": "false",
            "type": "shingle"
          },
          "my_edge_ngram_filter": {
            "type": "edge_ngram",
            "min_gram": "2",
            "max_gram": "5"
          }
        },
        "analyzer": {
          "my_autocomplete_search_analyzer": {
            "type": "custom",
            "tokenizer": "lowercase"
          },
          "my_lowercase_analyzer": {
            "filter": "lowercase",
            "type": "custom",
            "tokenizer": "standard"
          },
          "my_autocomplete_index_analyzer": {
            "filter": [
              "lowercase",
              "my_edge_ngram_filter"
            ],
            "type": "custom",
            "tokenizer": "TOKCamelCase"
          },
          "my_shingle2_analyzer": {
            "filter": [
              "lowercase",
              "my_shingle2_filter"
            ],
            "type": "custom",
            "tokenizer": "TOKCamelCase"
          },
          "TOKCamelCaseFILLowerCase": {
            "type": "custom",
            "filter": [
              "lowercase"
            ],
            "tokenizer": "TOKCamelCase"
          }
        },
        "tokenizer": {
          "my_autocomplete_index_tokenizer": {
            "token_chars": [
              "letter",
              "digit",
              "punctuation"
            ],
            "min_gram": "2",
            "type": "edge_ngram",
            "max_gram": "5"
          },
          "TOKCamelCase": {
            "pattern": """([^\p{L}\d]+)|(?<=\D)(?=\d)|(?<=\d)(?=\D)|(?<=[\p{L}&&[^\p{Lu}]])(?=\p{Lu})|(?<=\p{Lu})(?=\p{Lu}[\p{L}&&[^\p{Lu}]])""",
            "type": "pattern"
          }
        }
      }
    }
  },
  "mappings": {
    "_routing": {
      "required": true
    },
    "properties": {
      "HasEntityType": {
        "type": "text",
        "fields": {
          "completion": {
            "search_analyzer": "my_autocomplete_search_analyzer",
            "analyzer": "my_autocomplete_index_analyzer",
            "type": "text"
          },
          "lowercase_keyword": {
            "analyzer": "my_lowercase_analyzer",
            "type": "text"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "subject": {
        "type": "text"
      },
      "MyType": {
        "type": "join",
        "relations": {
          "entity": "annotation"
        }
      },
      "predicate": {
        "type": "text",
        "fields": {
          "completion": {
            "search_analyzer": "my_autocomplete_search_analyzer",
            "analyzer": "my_autocomplete_index_analyzer",
            "type": "text"
          },
          "lowercase_keyword": {
            "analyzer": "my_lowercase_analyzer",
            "type": "text"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "OriginatedFromResourceSiloLabel": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "HasEntityBlurbHTML": {
        "analyzer": "standard",
        "term_vector": "with_positions_offsets_payloads",
        "store": false,
        "type": "text"
      },
      "HasEntityContentSOURCE": {
        "fielddata": true,
        "analyzer": "standard",
        "term_vector": "with_positions_offsets_payloads",
        "store": false,
        "type": "text"
      },
      "HasEntityTitle": {
        "copy_to": [
          "custom_all"
        ],
        "analyzer": "standard",
        "term_vector": "with_positions_offsets_payloads",
        "type": "text",
        "fields": {
          "completion": {
            "search_analyzer": "my_autocomplete_search_analyzer",
            "analyzer": "my_autocomplete_index_analyzer",
            "type": "text"
          },
          "shingles2": {
            "fielddata": true,
            "analyzer": "my_shingle2_analyzer",
            "type": "text"
          },
          "TOKCamelCaseFILLowerCase": {
            "type": "text",
            "analyzer": "TOKCamelCaseFILLowerCase",
            "search_analyzer": "TOKCamelCaseFILLowerCase"
          }
        }
      },
      "HasEntityContentHTML": {
        "fielddata": true,
        "analyzer": "standard",
        "term_vector": "with_positions_offsets_payloads",
        "store": false,
        "type": "text"
      },
      "OriginatedFromResourceURL": {
        "index": true,
        "store": false,
        "type": "keyword"
      },
      "HasEntityURL": {
        "store": false,
        "type": "keyword"
      },
      "objectSOURCE": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "OriginatedFromResourceSiloID": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "OriginatedFromResourceName": {
        "index": true,
        "store": false,
        "type": "keyword"
      },
      "HasEntityKeywords": {
        "copy_to": [
          "custom_all"
        ],
        "type": "keyword"
      },
      "HasEntityName": {
        "fielddata": "true",
        "analyzer": "simple",
        "type": "text",
        "fields": {
          "lowercase_keyword": {
            "analyzer": "my_lowercase_analyzer",
            "type": "text"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "HasEntityClass": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "HasEntityBlurbSOURCE": {
        "analyzer": "standard",
        "term_vector": "with_positions_offsets_payloads",
        "store": false,
        "type": "text"
      },
      "HasEntityContentTEXT": {
        "copy_to": [],
        "fielddata": true,
        "analyzer": "standard",
        "term_vector": "with_positions_offsets_payloads",
        "store": false,
        "type": "text"
      },
      "HasEntityBlurbTEXT": {
        "copy_to": [
          "custom_all"
        ],
        "analyzer": "standard",
        "term_vector": "with_positions_offsets_payloads",
        "type": "text"
      },
      "custom_all": {
        "analyzer": "standard",
        "term_vector": "with_positions_offsets_payloads",
        "type": "text"
      },
      "OriginatedFromResourceSiloType": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "OriginatedFromResourceType": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "objectHTML": {
        "type": "text"
      },
      "objectTEXT": {
        "type": "text"
      },
      "FacetTags": {
        "type": "keyword"
      }
    }
  }
}
